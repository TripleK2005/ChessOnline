@{
    Layout = "_AuthLayout";
}
@model ChessOnline.Models.Account.ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    .form-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="row form-container">
    <div class="col-md-6 col-lg-5">
        <div class="card card-dark text-white shadow">
            <div class="card-body p-4 p-md-5">
                <h3 class="card-title text-center mb-4">Đổi mật khẩu</h3>
                <form asp-action="ChangePassword" method="post">
                    @* ... Các thẻ input, validation summary ... *@
                    <input type="hidden" asp-for="UserId" />
                    @if (ViewBag.Message != null) { /* ... */ }
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                        <input asp-for="OldPassword" type="password" class="form-control form-control-dark" placeholder="Mật khẩu cũ" />
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger small d-block mb-2"></span>

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="NewPassword" type="password" class="form-control form-control-dark" placeholder="Mật khẩu mới" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger small d-block mb-2"></span>

                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-dark" placeholder="Xác nhận mật khẩu mới" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mb-2"></span>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-success btn-lg">Lưu thay đổi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}