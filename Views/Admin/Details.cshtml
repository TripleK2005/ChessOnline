@model ChessOnline.Models.Admin.ManageUsersViewModel
@using ChessOnline.Models.Enums

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <div class="text-center mb-3">
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="@Model.Avatar" alt="Avatar" class="rounded-circle" width="120" height="120" />
                }
                else
                {
                    <i class="bi bi-person-circle text-secondary" style="font-size: 120px;"></i>
                }
            </div>

            <h4 class="text-center">@Model.Username</h4>
            <hr />

            <dl class="row mb-0">
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Vai trò</dt>
                <dd class="col-sm-8">@Model.Role</dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">
                    @if (Model.Status == AccountStatus.Active)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else if (Model.Status == AccountStatus.Banned)
                    {
                        <span class="badge bg-danger">Bị khóa</span>
                    }
                    else if (Model.Status == AccountStatus.Suspended)
                    {
                        <span class="badge bg-warning text-dark">Tạm khóa</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Chờ xác minh</span>
                    }
                </dd>

                <dt class="col-sm-4">Ngày tạo</dt>
                <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
            </dl>

            <div class="mt-4 text-center">
                @if (Model.Status == AccountStatus.Active)
                {
                    <form asp-action="BanUser" asp-route-id="@Model.UserID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-lock"></i> Khóa tài khoản
                        </button>
                    </form>
                }
                else if (Model.Status == AccountStatus.Banned)
                {
                    <form asp-action="UnbanUser" asp-route-id="@Model.UserID" method="post" class="d-inline">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-unlock"></i> Mở khóa tài khoản
                        </button>
                    </form>
                }

                <a asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-primary mx-1">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>

                <a asp-action="ManageUsers" class="btn btn-secondary mx-1">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
