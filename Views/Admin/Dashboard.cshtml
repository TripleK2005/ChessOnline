}

<h1 class="mb-4 text-white"><i class="fas fa-tachometer-alt me-2"></i>@ViewData["Title"]</h1>

<div class="row g-4">
    <div class="col-md-6 col-xl-3">
        <div class="card card-dark text-white border-secondary h-100">
