@model List<ChessOnline.Models.Admin.ManageUsersViewModel>
@using ChessOnline.Models.Enums

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<!-- Hiển thị thông báo (nếu có) -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Header chính của trang -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0 text-white"><i class="fas fa-users-cog me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-2"></i> Thêm người dùng mới
    </a>
</div>

<!-- Card chứa bảng quản lý -->
<div class="card card-dark text-white">
    <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
        <h5 class="mb-0 me-3">Danh sách người dùng</h5>
        <!-- Form tìm kiếm -->
        <form class="d-flex" style="max-width: 350px;">
            <input class="form-control form-control-dark me-2" type="search" placeholder="Tìm kiếm theo tên, email..." aria-label="Search">
            <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên đăng nhập</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th class="text-end" style="min-width: 180px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserID</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <!-- Giữ nguyên logic hiển thị Status của bạn vì đã rất tốt -->
                                @if (user.Status == AccountStatus.Active)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else if (user.Status == AccountStatus.Banned)
                                {
                                    <span class="badge bg-danger">Bị khóa</span>
                                }
                                else if (user.Status == AccountStatus.Suspended)
                                {
                                    <span class="badge bg-warning text-dark">Tạm khóa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chờ xác minh</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">
                                <!-- Xem -->
                                <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-sm btn-outline-info mx-1" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <!-- Sửa -->
                                <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-sm btn-outline-warning mx-1" title="Sửa">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>

                                <!-- Khóa / Mở khóa -->
                                @if (user.Status == AccountStatus.Active)
                                {
                                    <form asp-action="BanUser" asp-route-id="@user.UserID" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary mx-1" title="Khóa tài khoản">
                                            <i class="fas fa-lock"></i>
                                        </button>
                                    </form>
                                }
                                else if (user.Status == AccountStatus.Banned)
                                {
                                    <form asp-action="UnbanUser" asp-route-id="@user.UserID" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success mx-1" title="Mở khóa tài khoản">
                                            <i class="fas fa-unlock"></i>
                                        </button>
                                    </form>
                                }

                                <!-- Xóa -->
                                <form asp-action="Delete" asp-route-id="@user.UserID" method="post"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa vĩnh viễn tài khoản [@user.Username] không?');"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger mx-1" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Bạn có thể thêm phần Phân trang (Pagination) vào đây nếu cần -->

    </div>
</div>